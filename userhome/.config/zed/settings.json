// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "dock": "left",
    "font_family": "MesloLGMDZ Nerd Font",
    "font_size": 12,
    "env": {
      "TERM": "xterm-256color"
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "vim_mode": true,
  "vertical_scroll_margin": 4,
  "relative_line_numbers": true,
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "deepseek-chat"
    },
    "version": "2",
    "dock": "left"
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "https://api.deepseek.com",
      "available_models": [
        {
          "display_name": "DeepSeek V3",
          "name": "deepseek-chat",
          "max_tokens": 64000,
          "max_output_tokens": 8000
        }
      ]
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Maple Mono SC NF",
  "ui_font_family": "Zed Plex Sans",
  "buffer_font_size": 13,
  "ui_font_size": 14,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Github Dark Tritanopia"
  },
  "cursor_blink": false,
  "autosave": "on_focus_change",
  "tabs": {
    "git_status": true,
    "file_icons": false
  },
  "tab_size": 2,
  "format_on_save": "off",
  "current_line_highlight": "gutter",
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_background": true
  },
  "soft_wrap": "editor_width",
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": false
  }
}
